<Window x:Class="MovieSelector.Windows.DirectoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieSelector"
        mc:Ignorable="d"
        Title="Pick directories" Height="300" Width="300" WindowStyle="ToolWindow">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right">
            <Button Name="AddDirectory" Click="AddDirectory_OnClick">Add</Button>
            <Button Name="RemoveDirectory" Click="RemoveDirectory_OnClick">Remove</Button>
        </StackPanel>
        <ListBox Name="LbDirectories" ItemsSource="{Binding Directories}"></ListBox>
    </DockPanel>
</Window>
